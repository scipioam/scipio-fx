<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>

<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="scipiofx.test.controllers.MainController">
    <VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="800" spacing="10.0">
        <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
        </padding>

        <TextArea fx:id="textArea" prefWidth="300.0" prefHeight="150.0" />
        <HBox alignment="CENTER" spacing="80.0">
            <Button onAction="#onClearClick" text="清空console" />
        </HBox>
    </VBox>
</StackPane>
