<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import org.controlsfx.control.tableview2.TableView2?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scipiofx.test.controllers.TableCfxController">
   <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="65.0" prefWidth="250.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Button mnemonicParsing="false" text="查  询" onMouseClicked="#clickSearch" />
      <Button mnemonicParsing="false" text="重  置" onMouseClicked="#clickReset">
         <FlowPane.margin><Insets left="5.0" /></FlowPane.margin>
      </Button>
   </FlowPane>

   <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="65.0" prefWidth="250.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="65.0">
      <Button mnemonicParsing="false" text="新增行" onMouseClicked="#clickAddRow" />
      <Button mnemonicParsing="false" text="删除行" onMouseClicked="#clickDeleteRow">
         <FlowPane.margin><Insets left="5.0" /></FlowPane.margin>
      </Button>
      <Button fx:id="btnUpdateRow" mnemonicParsing="false" text="更新行" onMouseClicked="#clickUpdateRow" disable="true">
         <FlowPane.margin><Insets left="5.0" /></FlowPane.margin>
      </Button>
   </FlowPane>

   <TableView2 fx:id="tableView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="130.0" />
</AnchorPane>
